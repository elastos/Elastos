<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue1"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/settingItem_margin15"
                android:gravity="center_vertical"
                android:text="@string/didinfo"
                android:textSize="16sp" />

            <LinearLayout
                style="@style/settingItem_margin15"
                android:layout_marginTop="18dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/name"
                    android:textColor="@color/whiter50" />

                <TextView
                    android:id="@+id/tv_didname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:ellipsize="middle"
                    android:gravity="right"
                    android:singleLine="true" />
            </LinearLayout>

            <View style="@style/line_margin15" />

            <LinearLayout
                style="@style/settingItem_margin15"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mainpkmanage"
                    android:textColor="@color/whiter50" />

                <TextView
                    android:id="@+id/tv_didpk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:drawableRight="@mipmap/mine_did_list_copy"
                    android:drawablePadding="10dp"
                    android:ellipsize="middle"
                    android:gravity="right"
                    android:singleLine="true" />
            </LinearLayout>

            <View style="@style/line_margin15" />

            <LinearLayout
                style="@style/settingItem_margin15"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DID"
                    android:textColor="@color/whiter50" />

                <TextView
                    android:id="@+id/tv_did"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:drawableRight="@mipmap/mine_did_list_copy"
                    android:drawablePadding="10dp"
                    android:ellipsize="middle"
                    android:gravity="right"
                    android:singleLine="true" />
            </LinearLayout>

            <View style="@style/line_margin15" />

            <LinearLayout
                style="@style/settingItem_margin15"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/validdate"
                    android:textColor="@color/whiter50" />

                <TextView
                    android:id="@+id/tv_validdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:ellipsize="middle"
                    android:gravity="right"
                    android:singleLine="true" />
            </LinearLayout>

            <View style="@style/line_margin15" />

            <TextView
                android:id="@+id/tv_netline"
                style="@style/settingItem_margin15"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:text="@string/netlineinfo"
                android:textSize="16sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_show"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_edit"
                style="@style/button_margin"
                android:layout_marginTop="70dp"
                android:text="@string/edit" />

            <TextView
                android:id="@+id/tv_credentialinfo"
                style="@style/button_margin"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                android:text="@string/credentialinfo" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>