<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue1"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_suggest_tile"
                style="@style/common_margin15"
                android:ellipsize="end"
                android:maxLines="3" />

            <LinearLayout
                style="@style/common_margin15"
                android:layout_marginTop="13dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/whiter50"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/whiter50"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/whiter50"
                    android:textSize="11sp" />

            </LinearLayout>

            <TextView
                style="@style/common_margin15"
                android:layout_marginTop="25dp"
                android:text="@string/type"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_type"
                style="@style/common_margin15"
                android:layout_marginTop="4dp"
                android:textSize="11sp" />

            <TextView
                style="@style/common_margin15"
                android:layout_marginTop="18dp"
                android:text="@string/suggesthash"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_hash"
                style="@style/common_margin15"
                android:layout_marginTop="4dp"
                android:textSize="11sp" />

            <TextView
                style="@style/common_margin15"
                android:layout_marginTop="18dp"
                android:text="@string/suggesterdid"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_did"
                style="@style/common_margin15"
                android:layout_marginTop="4dp"
                android:textSize="11sp" />

            <TextView
                style="@style/common_margin15"
                android:layout_marginTop="18dp"
                android:text="@string/proposalmoneyacount"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_account"
                style="@style/common_margin15"
                android:layout_marginTop="4dp"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_tag_money"
                style="@style/common_margin15"
                android:layout_marginTop="18dp"
                android:text="@string/suggesterquota"
                android:textSize="13sp" />

            <LinearLayout
                style="@style/common_margin15"
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/count"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textSize="11sp" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv"
                style="@style/common_margin15"
                android:layout_width="match_parent" />

            <TextView
                style="@style/common_margin15"
                android:layout_marginTop="18dp"
                android:text="@string/abstract1"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_abs"
                style="@style/common_margin15"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="38dp"
                android:textSize="11sp" />


        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/black30">

        <View style="@style/line1" />

        <TextView
            android:id="@+id/tv_sign"
            style="@style/button_margin"
            android:layout_centerInParent="true"
            android:text="@string/sign" />
    </RelativeLayout>
</LinearLayout>