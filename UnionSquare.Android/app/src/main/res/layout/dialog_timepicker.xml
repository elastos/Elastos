<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="206dp"
    android:background="@color/pickerbg"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <TextView
        android:id="@+id/tv_dec"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:text="@string/selectsignnum"
        android:textColor="#ff999999"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_sure"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:text="@string/sure1"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <org.elastos.wallet.ela.utils.widget.TextConfigDataPicker
        android:id="@+id/np"
        style="@style/MyDatePicker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_sure"
        android:layout_alignParentBottom="true"
        android:background="@null" />

</RelativeLayout>