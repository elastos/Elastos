<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="@dimen/px72"
        android:layout_height="@dimen/px72"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:padding="10dp"
        android:src="@mipmap/window_54_close" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:scrollbars="vertical"
        android:text="@string/securitycertificate"
        android:textColor="@color/whiter"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_cancel"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:background="@null"
        android:hint="@string/inputWalletPwd"
        android:inputType="textPassword"
        android:textSize="14dp" />

    <View
        style="@style/line1"
        android:layout_below="@id/et_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_content"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView

            android:id="@+id/tv_sure"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@color/surebutton"
            android:gravity="center"
            android:text="@string/sure"
            android:textColor="@color/whiter"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/whiter"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>