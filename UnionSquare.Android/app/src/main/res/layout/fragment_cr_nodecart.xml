<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.layout.QMUILinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/found_bg"
    android:gravity="center"
    android:orientation="vertical">


    <include layout="@layout/title" />


    <com.qmuiteam.qmui.layout.QMUILinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/maxvote"
                android:textColor="@color/white"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_avaliable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="15dp"
                android:text="@string/available"
                android:textColor="#ffffffff"
                android:textSize="11sp" />

        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px30"
            android:layout_marginTop="22dp"
            android:layout_marginRight="@dimen/px30"
            android:layout_weight="1"
            android:divider="@null"
            android:dividerHeight="@dimen/px20"
            android:fadingEdge="none"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            android:scrollbars="none"
            android:visibility="gone" />


        <LinearLayout
            android:id="@+id/ll_blank"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@mipmap/found_vote_empty_list"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/nocandidates"
                android:textColor="@color/whiter50"
                android:textSize="17sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_bottom1"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#4D000000"
                android:orientation="vertical"
                android:paddingLeft="8dp">


                <CheckBox
                    android:id="@+id/cb_equal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/equaldivision"
                    android:textColor="@color/white" />


                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="6dp"
                    android:text="@string/totle"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_vote"
                android:layout_width="134dp"
                android:layout_height="match_parent"
                android:background="@drawable/sc_26ffffff_2"
                android:gravity="center"
                android:text="@string/mmediately_to_vote"
                android:textColor="#FEFEFF"
                android:textSize="15sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bottom2"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal"
            android:visibility="gone">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#4D000000"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:paddingLeft="8dp">

                <CheckBox
                    android:id="@+id/cb_selectall"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/future_generations"
                    android:textColor="@color/white" />


            </LinearLayout>


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_delete"
                android:layout_width="134dp"
                android:layout_height="match_parent"
                android:background="@drawable/sc_26ffffff_2"
                android:gravity="center"
                android:text="@string/delete"
                android:textColor="#FEFEFF"
                android:textSize="14sp" />

        </LinearLayout>
    </com.qmuiteam.qmui.layout.QMUILinearLayout>


</com.qmuiteam.qmui.layout.QMUILinearLayout>