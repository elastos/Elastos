<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/asset_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <RelativeLayout
        android:id="@+id/rl_address"
        style="@style/settingItem_pading15">


        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/address"
            android:textColor="@color/whiter50" />


        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tv1"
            android:ellipsize="end"
            android:gravity="center_vertical|right"
            android:singleLine="true" />

        <View
            style="@style/line1"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <LinearLayout
        style="@style/settingItem_margin15"
        android:layout_marginTop="18dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/name"
            android:textColor="@color/whiter50" />

        <TextView
            android:id="@+id/tv_didname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:ellipsize="middle"
            android:gravity="right"
            android:singleLine="true" />
    </LinearLayout>

    <View style="@style/line_margin15" />

    <LinearLayout
        style="@style/settingItem_margin15"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mainpkmanage"
            android:textColor="@color/whiter50" />

        <TextView
            android:id="@+id/tv_didpk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:drawableRight="@mipmap/mine_did_list_copy"
            android:drawablePadding="10dp"
            android:ellipsize="middle"
            android:gravity="right"
            android:singleLine="true" />
    </LinearLayout>

    <View style="@style/line_margin15" />

    <LinearLayout
        style="@style/settingItem_margin15"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DID"
            android:textColor="@color/whiter50" />

        <TextView
            android:id="@+id/tv_did"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:drawableRight="@mipmap/mine_did_list_copy"
            android:drawablePadding="10dp"
            android:ellipsize="middle"
            android:gravity="right"
            android:singleLine="true" />
    </LinearLayout>

    <View style="@style/line_margin15" />

    <LinearLayout
        style="@style/settingItem_margin15"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/validdate"
            android:textColor="@color/whiter50" />

        <TextView
            android:id="@+id/tv_validdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:ellipsize="middle"
            android:gravity="right"
            android:singleLine="true" />
    </LinearLayout>

    <View style="@style/line_margin15" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_show"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_add"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@color/qmui_config_color_25_pure_black"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/qmui_config_color_white" />


        <TextView
            android:id="@+id/tv_add"
            style="@style/button_margin"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:height="50dp"
            android:background="@drawable/setting_item_select"
            android:text="@string/addtocontact"
            android:textSize="17sp" />


    </LinearLayout>
</LinearLayout>