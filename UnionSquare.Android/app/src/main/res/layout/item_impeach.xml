<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@drawable/sc_10ffffff_cr5"
    android:orientation="horizontal"
    android:padding="10dp">
    <!-- android:background="@drawable/sc_10ffffff_cr5"-->
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/impeachinefect" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="1dp"
        android:background="@drawable/sc_white20_cr2_stc_ffffff"
        android:text="@string/expired"
        android:textColor="@color/whiter50"
        android:textSize="10sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_status"
        android:layout_marginTop="18dp"
        android:text="--" />

    <TextView
        android:id="@+id/tv_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_status"
        android:layout_alignParentRight="true"
        android:layout_marginTop="18dp"
        android:text="--" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_percent"
        android:layout_marginTop="7dp"
        android:text="@string/impeachvotesela"
        android:textColor="@color/whiter50"
        android:textSize="10sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_percent"
        android:layout_alignParentRight="true"
        android:layout_marginTop="7dp"
        android:text="@string/impeachprogress"
        android:textColor="@color/whiter50"
        android:textSize="10sp" />
</RelativeLayout>