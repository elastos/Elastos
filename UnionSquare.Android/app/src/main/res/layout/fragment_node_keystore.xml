<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/asset_bg"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <LinearLayout
        android:id="@+id/ll_1"
        style="@style/settingItem_margin15"
        android:layout_height="120dp"
        android:background="@drawable/setting_item"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/px100"
            android:layout_height="@dimen/px100"
            android:layout_marginTop="24dp"
            android:src="@mipmap/asset_wallet_ela_logo" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:textSize="14dp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/common_margin"
        android:background="@color/mainitembg"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:hint="@string/setkeystorepwd"
            android:inputType="textPassword"
            android:textSize="14sp" />

        <View
            style="@style/line1"
            android:layout_marginTop="20dp" />

        <EditText
            android:id="@+id/et_pwd_agin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:hint="@string/setkeystorepwdagin"
            android:inputType="textPassword"
            android:textSize="14sp" />

        <View
            style="@style/line1"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_outport"
        style="@style/button_margin"
        android:layout_marginTop="150dp"
        android:text="@string/sureoutport"
        android:textSize="16sp" />


</LinearLayout>