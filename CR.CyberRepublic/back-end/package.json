{
  "name": "EBP-backend",
  "version": "1.0.0",
  "scripts": {
    "start": "nodemon --config nodemon.json",
    "debug": "nodemon --config nodemon-debug.json",
    "build": "npm run build:ts",
    "build:ts": "tsc",
    "tsc": "tsc || echo TSC compilation has errors.",
    "tslint": "tslint -c tslint.json -p tsconfig.json -t codeFrame",
    "setup-pm2": "npm install -g pm2 && pm2 install pm2-logrotate",
    "start:staging": "npm run setup-pm2 && pm2 delete all; NODE_ENV=staging pm2 start dist/index.js --node-args='--max-old-space-size=1768' --log-date-format 'DD-MM HH:mm:ss.SSS' --log ./output.log && tail -f /dev/null",
    "start:production": "npm run setup-pm2 && pm2 delete all; NODE_ENV=production pm2 start dist/index.js --node-args='--max-old-space-size=1768' --log-date-format 'DD-MM HH:mm:ss.SSS' --log ./output.log && tail -f /dev/null",
    "unit": "NODE_ENV=jest jest --config test/unit/jest.conf.js --coverage --runInBand --detectOpenHandles",
    "test:prod": "node node_modules/jest/bin/jest.js --config test/unit/jest.conf.js --runInBand --bail --setupTestFrameworkScriptFile=./test/jest_setup.js --forceExit",
    "test": "npm run unit"
  },
  "dependencies": {
    "@google-cloud/translate": "^2.1.3",
    "@types/bs58": "^4.0.1",
    "@types/http-status": "0.2.30",
    "@types/jsonwebtoken": "^8.3.7",
    "@types/optimist": "0.0.29",
    "agenda": "^3.1.0",
    "aws-sdk": "^2.245.1",
    "axios": "^0.19.2",
    "base64url": "^3.0.1",
    "big.js": "^5.2.2",
    "bitcore-lib-p256": "^0.16.0",
    "body-parser": "1.18.2",
    "bs58": "^4.0.1",
    "compression": "^1.7.3",
    "connect-mongo": "^2.0.1",
    "connect-redis": "^3.3.3",
    "connect-timeout": "^1.9.0",
    "cookie-parser": "1.4.3",
    "cookie-session": "^2.0.0-beta.3",
    "cors": "^2.8.4",
    "crypto-js": "^3.1.9-1",
    "dotenv": "^4.0.0",
    "express": "4.16.0",
    "express-fileupload": "^0.4.0",
    "express-jwt": "^5.3.0",
    "express-session": "^1.15.6",
    "fs-extra": "5.0.0",
    "google-translate-api": "^2.3.0",
    "helmet": "3.9.0",
    "http-status": "1.0.1",
    "json2csv": "3",
    "jsonwebtoken": "^8.5.1",
    "jwk-to-pem": "^2.0.3",
    "lodash": ">=4.17.11",
    "mailgun-js": "^0.18.0",
    "moment": "^2.22.1",
    "mongoose": "^5.7.5",
    "mongoose-plugin-autoinc": "^1.1.9",
    "morgan": "^1.9.1",
    "natives": "^1.1.6",
    "newrelic": "^4.8.0",
    "querystring": "^0.2.0",
    "request": "^2.85.0",
    "rollbar": "^2.5.0",
    "s3": "^4.4.0",
    "uuid": "^3.2.1",
    "validator": "^10.2.0"
  },
  "devDependencies": {
    "@types/chai": "4.0.6",
    "@types/connect-timeout": "^0.0.33",
    "@types/cucumber": "2.1.0",
    "@types/dotenv": "^4.0.1",
    "@types/express": "4.0.39",
    "@types/helmet": "0.0.37",
    "@types/jest": "^22.2.3",
    "@types/js-yaml": "3.10.1",
    "@types/lodash": "^4.14.109",
    "@types/mongoose": "^5.0.13",
    "chai": "^4.1.2",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "sinon": "^1.17.6",
    "ts-jest": "^24.0.2",
    "ts-node": "3.3.0",
    "tslint": "^5.8.0",
    "typescript": "^3.4.1"
  },
  "engines": {
    "node": ">=9.10.0"
  }
}
