namespace elacp;

table userinfo {
    avatar : bool = false;
    name   : string;
    descr  : string;
    phone  : string;
    gender : string;
    email  : string;
    region : string;
}

table friendreq {
    name   : string;
    descr  : string;
    hello  : string;
}

table friendmsg {
    ext    : string;
    msg    : [ubyte];
}

table bulkmsg {
    ext    : string;
    totalsz: uint;
    tid    : long;
    data   : [ubyte];
}

table invitereq {
    ext    : string;
    tid    : long;
    bundle : string;
    totalsz: uint;
    data   : [uint8];
}

table invitersp {
    ext    : string;
    tid    : long;
    bundle : string;
    totalsz: uint;
    status : int;
    reason : string;
    data   : [uint8];
}

union anybody {
    userinfo,
    friendreq,
    friendmsg,
    invitereq,
    invitersp,
    bulkmsg
}

table packet
{
    type   : uint8;
    body   : anybody;
}

root_type packet;

table pullmsg {
    id        : ulong;
    from      : string;
    type      : ubyte;
    timestamp : ulong;
    address   : string;
    payload   :[ubyte];
}